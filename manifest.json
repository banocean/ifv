{
  "manifest_version": 3,
  "description": "Zmienia problematyczne elementy strony us≈Çugi \"Dziennik Vulcan\"",
  "version": "0.1",
  "name": "Improvements for Vulcan",

  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "host_permissions": [
    "*://dziennik-uczen.vulcan.net.pl/*",
    "*://dziennik-wiadomosci.vulcan.net.pl/*",
    "*://uczen.eduvulcan.pl/*",
    "*://wiadomosci.eduvulcan.pl/*",
    "*://eduvulcan.pl/*"
  ],

  "background": {
    "service_worker": "apply.js"
  },

  "action": {
    "default_popup": "popup/index.html"
  },

  "icons": {
    "128": "assets/logo/logo-128-red.png",
    "192": "assets/logo/logo-192-red.png",
    "512": "assets/logo/logo-512-red.png"
  }
}
